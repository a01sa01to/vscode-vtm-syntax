{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "virtual-turing-machine",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#state"
		},
		{
			"include": "#operator"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment",
					"match": "^#(.*)$"
				}
			]
		},
		"state": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "^(?!.*\\s-\\s).*$"
				},
				{
					"name": "support.constant",
					"match": "accept"
				},
				{
					"name": "support.constant",
					"match": "reject"
				}
			]
		},
		"operator": {
			"patterns": [
				{
					"name": "keyword.operator",
					"match": " - "
				},
				{
					"name": "keyword.control",
					"match": ","
				}
			]
		}
	},
	"scopeName": "source.vtm"
}